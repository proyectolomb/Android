<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FondoActividadesPricipal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_principal">

    <fragment
        android:id="@+id/nav_host_fragment_content_principal"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/FondoActividadesPricipal"
        app:defaultNavHost="true"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation">
    </fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/btdaraltaimagen"
            android:layout_width="@dimen/botonespaginaprincipal"
            android:layout_height="@dimen/botonespaginaprincipal"
            android:background="@drawable/roundcornercolorbeis"
            app:srcCompat="@drawable/handover"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <ImageButton
            android:id="@+id/btdevolverimagen"
            android:layout_width="@dimen/botonespaginaprincipal"
            android:layout_height="@dimen/botonespaginaprincipal"
            android:background="@drawable/roundcornercolorbeis"
            app:srcCompat="@drawable/returnboooko"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <ImageButton
            android:id="@+id/bthistorialimage"
            android:layout_width="@dimen/botonespaginaprincipal"
            android:layout_height="@dimen/botonespaginaprincipal"
            android:background="@drawable/roundcornercolorbeis"
            app:srcCompat="@drawable/handover"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>